<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Container avec bouton favori -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"/>

            <!-- Bouton favori -->
            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/circle_white_bg"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_favorite"
                app:tint="@color/purple_700" />

            <!-- Badge condition -->
            <TextView
                android:id="@+id/tvCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp"
                android:background="@drawable/badge_condition_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Neuf"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Titre -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre du produit"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="?android:textColorPrimary"
                android:lineSpacingMultiplier="1.1"/>

            <!-- Prix -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29.99 €"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="39.99 €"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Localisation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/locationContainer">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_location"
                    app:tint="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Paris"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    android:progressTint="@color/orange_primary"
                    android:secondaryProgressTint="@android:color/darker_gray"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:transformPivotX="0dp"/>

                <TextView
                    android:id="@+id/tvRatingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(12)"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10sp"
                    android:visibility="gone"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <!-- Verified seller badge -->
                <ImageView
                    android:id="@+id/ivVerifiedBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_verified"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>