<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorSurface">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Mon Profil"
            app:titleTextColor="@color/purple_700"
            app:navigationIcon="?attr/homeAsUpIndicator"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Carte Profil -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Photo de profil cliquable -->
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_profile"
                            app:civ_border_width="3dp"
                            app:civ_border_color="@color/purple_700"/>

                        <ImageView
                            android:id="@+id/btnEditPhoto"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_camera"
                            android:background="@drawable/circle_purple_bg"
                            android:padding="6dp"
                            app:tint="@android:color/white"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utilisateur"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="?android:textColorPrimary"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@example.com"
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/userRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acheteur"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:background="@drawable/bg_role_purple"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="#757575"/>

                        <TextView
                            android:id="@+id/userLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Localisation non dÃ©finie"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginStart="4dp"/>

                        <ImageView
                            android:id="@+id/btnEditLocation"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_edit"
                            app:tint="@color/purple_700"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>
                        android:paddingVertical="6dp"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stats Vendeur -->
            <androidx.cardview.widget.CardView
                android:id="@+id/statsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvProductCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Produits"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSalesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ventes"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_700"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="4dp"
                                android:src="@android:drawable/star_on"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Note moyenne"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section Vendeur -->
            <LinearLayout
                android:id="@+id/sellerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Espace Vendeur"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnAddProduct"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âž• Mettre en vente"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:backgroundTint="@color/orange_primary"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnManageProducts"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“ GÃ©rer mes produits"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:backgroundTint="@color/orange_primary"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“Š Gestion des ventes"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:backgroundTint="@color/orange_primary"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

            <!-- Section Acheteur -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon compte"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“¦ Historique des achats"
                android:textAllCaps="false"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸšª Se dÃ©connecter"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#F44336"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#F44336"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
