<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme -->
    <style name="Base.Theme.Commandezmoi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Dark backgrounds -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <!-- Text colors for dark mode -->
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:editTextColor">@color/dark_text_primary</item>
        <!-- TextInputLayout style -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout.Dark</item>
    </style>
    
    <!-- Dark TextInputLayout style -->
    <style name="Widget.App.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_200</item>
        <item name="hintTextColor">@color/purple_200</item>
        <item name="android:textColorHint">@color/dark_text_secondary</item>
    </style>
</resources>